<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/platinum"
    tools:context=".HeadsAndTailsActivity">

    <ImageView
        android:id="@+id/imageViewCoinHeads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/descr_coins_heads"
        android:padding="100dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin_heads" />

    <ImageView
        android:id="@+id/imageViewCoinTails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/descr_coins_heads"
        android:padding="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin_tails" />

</androidx.constraintlayout.widget.ConstraintLayout>